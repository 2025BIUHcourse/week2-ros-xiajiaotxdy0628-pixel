<launch>
  <!-- 乌龟 1 -->
  <group ns="turtle1">
    <node pkg="turtlesim" type="turtlesim_node" name="sim"/>
    <node pkg="turtlesim" type="turtle_teleop_key" name="teleop" output="screen"/>
  </group>

  <!-- 乌龟 2 -->
  <group ns="turtle2">
    <node pkg="turtlesim" type="turtlesim_node" name="sim"/>
  </group>

  <!-- rqt_graph -->
  <node pkg="rqt_graph" type="rqt_graph" name="rqt_graph"/>
  <!-- rqt_plot 速度曲线 -->
  <node pkg="rqt_plot" type="rqt_plot" name="rqt_plot" args="/turtle1/cmd_vel/linear/x /turtle2/cmd_vel/linear/x"/>
</launch>
